@using BogWebShop.ViewModels;
@model AuthorVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2>@Model.Products.ProductName</h2>
            <p>
              <b>Skrevet af:</b> @Model.Authors.Name <br />
              <b>Forlag:</b> @Model.Products.Publisher
            </p>
            <p>@Model.Products.Description</p>
        </div>
        <div class="col-lg-6">
            <img src="~/Images/Products/@Model.Products.Image" />
            <button type="button" onclick="addCart(@Model.Products.ID)">Tilf√∏j til kurv</button>
        </div>
    </div>
</div>
