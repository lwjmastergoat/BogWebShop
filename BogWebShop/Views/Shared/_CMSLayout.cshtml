<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Css/CMS/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Css/CMS/CMSCSSMAIN.css" rel="stylesheet" />
    <link href="~/Css/CMS/CMSContactCSS.css" rel="stylesheet" />

</head>
<body>
    <!-- Dash Navbar Top -->
    <nav class="navbar navbar-light bg-faded navbar-static-top dash-navbar-top nb-visible">
        <button class="nb-btn-toggle">
            <span class="fa fa-bars"></span>
        </button>
    </nav>

    <!-- Dash Navbar Left -->
    <div class="dash-navbar-left nb-visible">
        <a class="navbar-brand" href="/CMS">Admin Panel</a>

        <p class="nb-nav-title">Home</p>
        <ul class="nb-nav">
            <li>
                <a href="/CMS">
                    <span class="fa fa-folder nb-link-icon"></span>
                    <span class="nb-link-text">CMS Overblik</span>
                </a>
                <a href="/Home/Index">
                    <span class="fa fa-file nb-link-icon"></span>
                    <span class="nb-link-text">Forside</span>
                </a>
            </li>
            <br />
            <p class="nb-nav-title">Settings</p>
            <li class="">

                @if ((int)Session["role"] >= 1)
    {
            <a href="/CMS/Product/">
                <span class="fa fa-file-text nb-link-icon"></span>
                <span class="nb-link-text">Produkt</span>
            </a>
}
                @if ((int)Session["role"] >= 1)
    {
            <a href="/CMS/ContactInfo/">
                <span class="fa fa-file-text nb-link-icon"></span>
                <span class="nb-link-text">Kontakt</span>
            </a>
}

                @if ((int)Session["role"] >= 2)
                {
                    <a href="/CMS/Order/">
                        <span class="fa fa-file-text nb-link-icon"></span>
                        <span class="nb-link-text">Ordre</span>
                    </a>
                }




            </li>
            <br />
            <p class="nb-nav-title">Current User</p>

            <li>
                <a href="/Login/Logout">
                    <span class="fa fa-sign-out nb-link-icon"></span>
                    <span class="nb-link-text">Log ud</span>
                </a>
            </li>
    </div> <!-- /.dash-navbar-left -->


    <div class="content-wrap nb-visible" data-effect="nb-push">
        <div class="container-fluid">
            <div class="row">
                <!-- Your content here -->
                <div class="col-sm-12">
                    <div>
                        @RenderBody()
                    </div>
                </div>
                <!-- End of your content -->
            </div>
        </div>
    </div> <!-- /.content-wrap -->
    <!-- jQuery first, then Tether, then Bootstrap JS. -->


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js" integrity="sha384-XTs3FgkjiBgo8qjEjBk0tGmf3wPrWtA6coPfQDfFEY8AnYJwjalXCiosYRBIBZX8" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>
</body>
</html>
