<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link href="~/Css/CMS/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Css/mainstyle.min.css" rel="stylesheet" />
	<link href="~/Css/Cart.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
	<script type="text/template" id="Template-cartItem">
		<div class="row">
			<span class="col-md-6">{{Name}}</span>
			<input onchange="updateCart({{ID}},this)" type="number" step="1" value="{{Amount}}"/>
			<span class="price">{{Price}}kr.</span>
			<button type="button" onclick="removeCart({{ID}})">X</button>
		</div>
	</script>
	<script type="text/template" id="Template-TotalPrice">
		<div class="row">
			<span class="col-md-6"><a>Køb nu</a></span>
			<span class="col-md-6">Total Price {{Total}}kr.</span>
		</div>
	</script>
	@RenderSection("Templates", false)
</head>
<body>
  <header>
      <h1 id="companyname">ASPHP.NET</h1>
    <nav>
      <ul>
          <li><a href="/Home/Index"><i class="fa fa-home"></i>Forside</a></li>
        <li id="cartHolder">
			<a class="cartbutton position-relative">
                <span id="counter" onchange="updateCart({{ID}},this)" type="number" step="1" value="{{Amount}}"> </span>
            <i class="fa fa-shopping-basket"></i>Kurv</a>
			<ul id="Cart">
			</ul>
		</li>
        <li><a><i class="fa fa-user"></i>Login</a></li>
          <li><a href="/Home/Contact/"><i class="fa fa-phone"></i>Kontakt</a></li>
      </ul>
    </nav>
  </header>
    <div id="wrapper">
        @RenderBody()
    </div>
    @*<footer>
        <p>&copy;Kod med bøger 2018</p>
    </footer>*@
    <script src="~/JavaScripts/jquery-3.3.1.min.js"></script>
	<script src="~/JavaScripts/Cart.js"></script>
</body>
</html>
